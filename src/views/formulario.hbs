<div class="jumbotron">
  <h1 class="display-4">Ingrese un producto</h1>
  <p class="lead"><hr /></p>
  <hr class="my-4" />
  <form action="/api/productos/guardar" method="POST">

    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Nombre</label>
      <div class="col-sm-10">
        <input
          type="text"
          id="title"
          name="title"
          class="form-control"
          aria-describedby="prod"
          placeholder="Producto"
        />
        {{! <small id="prod" class="form-text text-muted">Ingrese un producto.</small> }}

      </div>

    </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Precio</label>
      <div class="col-sm-10">
        <input
          type="precio"
          id="price"
          name="price"
          class="form-control"
          placeholder="Precio"
        />
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Foto URL</label>
      <div class="col-sm-10">
        <input
          type="text"
          id="thumbnail"
          name="thumbnail"
          class="form-control"
          placeholder="foto"
        />
      </div>
    </div>

    <button
      type="submit"
      class="btn btn-primary btn-lg btn-block"
    >Guardar</button>
  </form>
</div>